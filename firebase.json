{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "*.env*",
      ".history"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 3002
    },
    "firestore": {
      "port": 3003
    },
    "hosting": {
      "port": 3004
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
